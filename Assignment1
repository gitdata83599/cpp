Que 2)
Write a menu driven program for Date in a CPP language using structure and also using class.
Date is having data members day, month, year. Implement the following functions.
void initDate();
void printDateOnConsole();
void acceptDateFromConsole();
bool isLeapYear();
#include <iostream>
using namespace std;
struct Date
{
private:
    int day;
    int month;
    int year;

public:
    void initDate()
    {
        day = 01;
        month = 01;
        year = 2000;
    }
    void printDateOnConsole()
    {
        cout << "default date = " << day << " / " << month << " / " << year;
    }
    void acceptDateFromConsole()
    {
        cout << "Enter day - ";
        cin >> day;
        cout << "Enter month - ";
        cin >> month;
        cout << "Enter year - ";
        cin >> year;

    }
    bool isLeapYear()
    {
        if(year%4==0 || year%100==0){
            cout<<year <<" IS LEAP YEAR "<<endl;
            return 1;
        }else{
cout<<year <<" IS NOT LEAP YEAR "<<endl;
        }
        return 0;
    }
};
int main()
{
    struct Date d1;
    d1.initDate();
    int choice = 0;

    do
    {
        cout << "\n SELECT YOUR CHOICE \n";
        cout << "HERE IS THE LIST\n";
        cout << "1. INITIALIZE THE DATE\n";
        cout << "2. ACCEPT THE DATE \n";
        cout << "3. PRINT THE DATE \n";
        cout << "4. LEAP YEAR OR NOT \n";
        cout << "5. EXIT \n";
        cin >> choice;
        switch (choice)
        {

        case 1:
            d1.initDate();
            cout << "initialized the date" << endl;
            break;
        case 2:
            d1.acceptDateFromConsole();
            cout << "date is accepted\n";
            break;

        case 3:
            d1.printDateOnConsole();
            cout << "\n.......................\n";
            break;

        case 4:
            d1.isLeapYear();
            break;

        case 5:
            cout << "thank uhh \n";
            // exit();
            break;

        default:
            cout << "WRONG CHOICE ENTERED ! ! ! ! ! ! !\n";
            cout << "ENTER THE CHOICE FROM LIST 1-5 : ";

            break;
        }

    } while (choice != 5);

    // acceptDateFromConsole(&d1);
    // printDateOnConsole(&d1);

    return 0;
}

